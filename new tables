create table admin(admin_id int auto_increment , pno varchar(11),email_id varchar(20),password varchar(20), primary key(admin_id));

create table hotel(hid int not null auto_increment, name varchar(20) , rooms integer, pno varchar(11),lane varchar(20),city varchar(20),pincode varchar(20), primary key(hid));

create table restaurant(rid int not null auto_increment,name varchar(20) ,pno varchar(11),lane varchar(20),city varchar(20),pincode varchar(20), primary key(rid));

create table user(userid int auto_increment, pno varchar(11), name varchar(20),primary key(userid));

create table hotelmanagement(admin_id int, hid int,primary key(admin_id),foreign key(admin_id) references admin(admin_id),foreign key(hid) references hotel(hid));

create table restmanagement(admin_id int, rid int,primary key(admin_id),foreign key(admin_id) references admin(admin_id),foreign key(rid) references restaurant(rid));

create table usermanagement(admin_id int, userid int,primary key(admin_id),foreign key(admin_id) references admin(admin_id),foreign key(userid) references user(userid));

create table food(fid int ,rid int, foodname varchar(20), description varchar(100), cost int, primary key(foodname, rid), foreign key(rid) references restaurant(rid));

create table payment(pid int auto_increment, amount int, userid int, primary key(pid), foreign key(userid) references user(userid));

create table login(username varchar(20), password varchar(20), type enum('hotel', 'restaurant', 'admin', 'user'), id int, primary key(username));

create table rooms(rno int auto_increment, hid int, booked bool, cost integer, persons integer, description varchar(1000), primary key(rno, hid), foreign key(hid) references hotel(hid));

create table hotelbook(bid int auto_increment, hid int, userid int, rno int, pid int, checkin datetime, checkout datetime, primary key(bid), foreign key(hid) references hotel(hid), foreign key(userid) references user(userid), foreign key(pid) references payment(pid));

create table restbook(bid int auto_increment, rid int, userid int, pid int, foodname varchar(20), primary key(bid), foreign key(rid) references restaurant(rid), foreign key(userid) references user(userid), foreign key(pid) references payment(pid), foreign key(foodname) references food(foodname));
